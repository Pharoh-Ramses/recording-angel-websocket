# API Keys
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Simple API token for client authentication
API_TOKEN=your-api-token-here

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://user:password@localhost/recording_angel
# For development with SQLite:
# DATABASE_URL=sqlite:///./recording_angel.db

# Paragraphizer configuration
PARAGRAPHIZER_PROVIDER=gemini
PARAGRAPHIZER_HTTP_URL=
PARAGRAPHIZER_HTTP_AUTH_HEADER=
